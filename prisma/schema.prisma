// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Pizza {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  price       Float
  ingredients String
  Order       Order[]

  @@map("pizza")
}

model Order {
  id        Int    @id @default(autoincrement())
  quantity  Int
  pizzaname String
  pizza     Pizza  @relation(fields: [pizzaname], references: [name])
}
